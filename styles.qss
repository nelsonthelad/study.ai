QPushButton {
    border: 5px solid #3498db;  /* Border color */
    border-radius: 100px;      /* Roundness (half of width/height) */
    background-color: #f1c40f; /* Button color */
    color: #2c3e50;            /* Text color */
    font-size: 18px;           /* Font size */
    font-weight: bold;         /* Font weight */
}
QPushButton:hover {
    background-color: #f39c12; /* Hover effect */
}
QPushButton:pressed {
    background-color: #e67e22; /* Pressed effect */
}
